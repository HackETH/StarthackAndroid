<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/hang_up_fab"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_width="wrap_content"
        android:src = "@drawable/ic_call_end_white_24px"
        android:layout_margin="@dimen/fab_margin"

        android:background="#de3333"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mute_fab"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_width="wrap_content"
        android:src = "@drawable/ic_mic_green_24px"
        android:layout_margin="@dimen/fab_margin"

        android:background="#de3333"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/speaker_fab"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:src = "@drawable/ic_switch_camera_512dp"
        android:layout_margin="@dimen/fab_margin"

        android:background="#de3333"
        />
</FrameLayout>